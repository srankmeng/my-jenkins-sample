pipeline {
    agent any

    stages {
        stage('Deploy application') {
            steps {
                sh 'docker rm -f json-server || true'
                sh 'docker run -p 3000:3000 --name json-server -d srank123/json-server:$BUILD_NUMBER'       
            }
        }
    }
    post {
        always {
            echo 'deploy done'
        }
    }
}
